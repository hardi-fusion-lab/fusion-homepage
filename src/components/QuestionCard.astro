---


interface Props {
  slug: string;
  title: string;
  category: string;
  subCategory: string;

  isSelected?: boolean;
}

const { slug, title, subCategory, isSelected = false } = Astro.props;

---

<a 
  href={`/questions/${slug}`}
  class={`relative block p-4 cursor-pointer transition-all ${
    isSelected 
      ? 'bg-primary/10 text-primary' 
      : 'hover:bg-slate-100 dark:hover:bg-slate-800/40'
  }`}
>
  {isSelected && <div class="absolute left-0 top-0 bottom-0 w-[3px] bg-primary"></div>}
  <div class="flex justify-between items-start mb-1">
    <span class="text-[10px] font-bold uppercase tracking-wider text-slate-500 bg-slate-100 dark:bg-slate-800 px-1.5 py-0.5 rounded">
      {subCategory}
    </span>
  </div>
      <h3 class={`text-sm font-medium line-clamp-2 mb-1 transition-colors ${isSelected ? 'text-primary' : 'text-slate-700 dark:text-slate-200 group-hover:text-primary dark:group-hover:text-primary'}`}>
        {title}
      </h3>
</a>
