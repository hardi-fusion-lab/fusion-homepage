---
import { Calendar, ArrowRight, Clock } from 'lucide-react';

interface Props {
  title: string;
  summary: string;
  href: string;
  date: string;
  readTime?: string;
  tags?: string[];
  category?: string;
}

const { title, summary, href, date, readTime = "5 min", tags = [], category } = Astro.props;
---

<a 
  href={href}
  class="group relative flex flex-col h-full p-8 rounded-3xl bg-white/[0.03] border border-white/10 overflow-hidden transition-all duration-500 hover:border-blue-500/40 hover:bg-white/[0.08] hover:-translate-y-2 hover:shadow-[0_30px_60px_-15px_rgba(0,0,0,0.5),0_0_25px_rgba(59,130,246,0.15)]"
>
  <!-- Background Static Gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 via-transparent to-purple-500/5 opacity-50 -z-10"></div>
  
  <!-- Content -->
  <div class="flex flex-col h-full relative z-10">
    <div class="flex items-center justify-between mb-6">
      {category && (
        <span class="px-3 py-1 text-[10px] font-black uppercase tracking-[0.2em] bg-blue-500/10 text-blue-400 rounded-lg border border-blue-500/20 shadow-[0_0_10px_rgba(59,130,246,0.1)]">
          {category}
        </span>
      )}
      <div class="flex items-center gap-2 text-[11px] font-medium text-gray-500">
        <Clock size={12} className="text-gray-600" />
        <span>{readTime}</span>
      </div>
    </div>

    <h3 class="text-2xl font-bold text-white mb-4 group-hover:text-blue-400 transition-colors duration-300 leading-tight">
      {title}
    </h3>

    <p class="text-gray-400 text-sm leading-relaxed mb-8 line-clamp-3">
      {summary}
    </p>

    <div class="mt-auto flex items-center justify-between pt-6 border-t border-white/5">
      <div class="flex items-center gap-2 text-xs font-semibold text-gray-500">
        <Calendar size={13} className="text-blue-500/50" />
        <span class="tracking-tight">{new Date(date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}</span>
      </div>
      
      <div class="flex items-center gap-2 text-xs font-bold text-blue-400 opacity-80 group-hover:opacity-100 group-hover:translate-x-1 transition-all duration-300 uppercase tracking-widest">
        Read More
        <ArrowRight size={16} />
      </div>
    </div>
  </div>

  <!-- Decorative Corner Accent -->
  <div class="absolute top-0 right-0 w-24 h-24 bg-gradient-to-bl from-blue-500/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
</a>
