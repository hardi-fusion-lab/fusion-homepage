---
import clsx from "clsx";

interface Props {
  name: string;
  className?: string;
  onClick?: () => void; // Optional if we want interactivity later
  active?: boolean;
}

const { name, className, active } = Astro.props;
---

<div
  class={clsx(
    "px-4 py-2 rounded-lg text-sm font-medium transition-all duration-300 border backdrop-blur-sm cursor-default select-none",
    active
      ? "bg-blue-500 text-white border-blue-400 shadow-[0_0_15px_rgba(59,130,246,0.5)] transform scale-105"
      : "bg-white/5 text-gray-400 border-white/10 hover:bg-white/10 hover:text-gray-200 hover:border-white/20",
    className
  )}
>
  {name}
</div>
