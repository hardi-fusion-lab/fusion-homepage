---
import { ArrowUpRight, Github, Lock, Eye } from 'lucide-react';
import clsx from 'clsx';

interface Props {
  title: string;
  description: string;
  tags: string[];
  link?: string;
  github?: string;
  featured?: boolean;
  modalId?: string;
}

const { title, description, tags, link, github, featured = false, modalId } = Astro.props;

// Only lock if both link and github are missing/empty AND no modalId
const isActuallyComingSoon = (!link && !github && !modalId);
---

<div
  onclick={!isActuallyComingSoon ? (modalId ? `document.getElementById('${modalId}').showModal()` : `window.open('${link}', '${link?.startsWith('http') ? '_blank' : '_self'}')`) : undefined}
  class={clsx(
    "group relative overflow-hidden rounded-2xl border border-white/10 bg-white/5 p-6 backdrop-blur-sm transition-all duration-300",
    isActuallyComingSoon ? "opacity-60 grayscale cursor-not-allowed" : "hover:border-blue-500/30 hover:bg-white/12 hover:-translate-y-1 shadow-lg hover:shadow-blue-500/15 cursor-pointer",
    featured ? "md:col-span-2" : ""
  )}
>
  {!isActuallyComingSoon && (
    <div class="absolute inset-0 -z-10 bg-gradient-to-br from-blue-500/10 via-purple-500/5 to-transparent opacity-0 transition-opacity duration-500 group-hover:opacity-100" />
  )}

  <div class="flex flex-col h-full justify-between gap-6 pointer-events-none">
    <div>
      <div class="flex items-start justify-between mb-4">
        <h3 class="text-xl font-bold text-white group-hover:text-blue-400 transition-colors">
          {title}
        </h3>
        <div class="flex gap-2 relative z-10 pointer-events-auto">
          {github && github !== '#' && (
            <a
              href={github}
              target="_blank"
              rel="noopener noreferrer"
              class="p-2 text-gray-400 hover:text-white transition-colors rounded-full hover:bg-white/10"
              aria-label="View Source on GitHub"
              onclick="event.stopPropagation()"
            >
              <Github size={20} />
            </a>
          )}
          {isActuallyComingSoon ? (
            <div class="flex items-center gap-1 px-3 py-1 rounded-full bg-white/5 border border-white/10 text-xs font-medium text-gray-500">
              <Lock size={12} />
              <span>Locked</span>
            </div>
          ) : (
             <div class="p-2 text-gray-400 group-hover:text-blue-400 transition-colors">
              <ArrowUpRight size={20} />
            </div>
          )}
        </div>
      </div>

      <p class="text-gray-400 leading-relaxed mb-6 line-clamp-3">
        {description}
      </p>
    </div>

    <div class="flex items-end justify-between">
      <div class="flex flex-wrap gap-2">
        {tags.map((tag) => (
          <span class="px-3 py-1 text-xs font-medium text-blue-300/70 bg-blue-500/10 rounded-full border border-blue-500/20 group-hover:text-blue-300 transition-colors">
            {tag}
          </span>
        ))}
      </div>
    </div>
  </div>
</div>
